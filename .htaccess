# ==============================================================================
# CONSTRUBÃO - Configurações Apache (.htaccess)
# ==============================================================================

# Habilitar RewriteEngine
RewriteEngine On

# ------------------------------------------------------------------------------
# URLs Limpas (remover .php)
# ------------------------------------------------------------------------------

# Redirecionar URLs com .php para versão sem extensão (SEO)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Servir arquivo .php quando acessado sem extensão
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# ------------------------------------------------------------------------------
# Página de Erro 404
# ------------------------------------------------------------------------------
ErrorDocument 404 /404.php

# ------------------------------------------------------------------------------
# Segurança
# ------------------------------------------------------------------------------

# Bloquear acesso a arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|log|ini|sql|bak|config)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear acesso a diretórios
Options -Indexes

# Proteger diretório includes
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^database/ - [F,L]
</IfModule>

# Headers de Segurança
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Habilitar XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ------------------------------------------------------------------------------
# Performance
# ------------------------------------------------------------------------------

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache de Navegador
<IfModule mod_expires.c>
    ExpiresActive On

    # Imagens
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS e JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Fontes
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ------------------------------------------------------------------------------
# Charset
# ------------------------------------------------------------------------------
AddDefaultCharset UTF-8

# ------------------------------------------------------------------------------
# PHP Settings (se permitido)
# ------------------------------------------------------------------------------
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>
